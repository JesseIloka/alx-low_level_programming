#include "main.h"

/**
 * leet - encodes strings in leet format
 * @str: string to encode in leet format
 *
 * Return: leet coded string
 */
char *leet(char *str)
{
	int i;

	while (str[i])
	{
		if (i == 'a' || i == 'A')
			str[i] = '4';
		else if (i == 'e' || i == 'E')
			str[i] = '3';
		else if (i == 'o' || i == 'O')
			str[i] = '0';
		else if (i == 't' || i == 'T')
			str[i] = '7';
		else if (i == 'l' || i == 'L')
			str[i] = '1';

	}
	return (str);
}


